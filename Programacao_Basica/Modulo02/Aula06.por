programa {
  funcao inicio() {
    escreva("Digite um número: ")
    inteiro numero
    leia(numero)

    escolha(numero) {
      caso 1:
      escreva("Um")
      pare

      caso 2:
      escreva("Dois")
      pare

      caso 3:
      escreva("Três")
      pare

      caso contrario:
      escreva("ERRO!")
      pare
    }
    escreva("\nFIM DO PROGRAMA!\n")
  }
}
