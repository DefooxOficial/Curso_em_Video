// Aula 05 do Módulo 01 do curso de Programação Básica

programa {
  funcao inicio() {
    const inteiro MAIORIDADE = 18
    inteiro idade
    escreva("Olá, quantos anos você tem? ")
    leia(idade)
    escreva("Você tem ", idade, " anos de idade.\n")  // Usar \t vai criar uma tabulação na linha
    escreva("E a maioridade é atingida com ", MAIORIDADE, " anos de idade.")
  }
}
